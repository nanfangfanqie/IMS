<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    <ImageView
            android:id="@+id/img_friend_header"
            android:layout_width="33.33dp"
            android:layout_height="33.dp"
            android:src="@drawable/qipao"
            android:layout_marginLeft="14.67dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
            android:id="@+id/txt_username"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"
            android:maxLines="1"
            android:text="很短的昵称"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_friend_header"
            app:layout_constraintBottom_toBottomOf="parent"
    />


    <View android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          app:layout_goneMarginBottom="0dp"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_gravity="bottom"
          android:background="@color/gainsboro"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>